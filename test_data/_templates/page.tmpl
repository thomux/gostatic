{{template "base" .}}

{{define "title"}}{{.Title}}{{end}}

{{define "main"}}
    <div class="block">
        <h1 class="title">
            {{.Title}}
        </h1>
    </div>
    <div class="block">
        <p class="subtitle">
            {{index .Meta "subtitle"}}
        </p>
    </div>

    <div class="block">
        {{ .Content }}
    </div>
{{end}}
